#!/bin/sh

if [ $# -lt 1 ]
then
  echo "Usage: $0 stage|prod"
  exit
fi

cd `dirname $0`

target=$1
srcpath=../aerospike/target/apidocs/html
trgpath=/var/www/website/web/c_api

if [ "$target" = "stage" ]
then
  host="builds@staging.aerospike.com"
elif [ "$target" = "prod" ]
then
  host="builds@www.aerospike.com"
else
  echo Invalid website target: $target
  echo "Usage: $0 stage|prod"
  exit  
fi

port=6472

echo ssh -p $port $host "rm -rf $trgpath/*"
ssh -p $port $host "rm -rf $trgpath/*"

echo scp -P $port $srcpath/* $host:$trgpath
scp -P $port -r $srcpath/* $host:$trgpath
